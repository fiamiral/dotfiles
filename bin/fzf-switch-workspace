#!/bin/bash

workspace_list() {
    swaymsg -t get_workspaces -r \
    | jq -r ".[].name"
}

fzf() {
    fzf-float -t "Switch workspace" -- \
    --bind="space:print-query,backward-eof:abort"
}


main() {
    local selected
    selected=$(workspace_list | fzf)

    if [[ -n "$selected" ]]; then
        swaymsg workspace "$selected"
    fi
}

main
